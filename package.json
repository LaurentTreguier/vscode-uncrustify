{
    "name": "uncrustify",
    "displayName": "Uncrustify",
    "description": "Code format using uncrustify",
    "version": "2.15.0",
    "publisher": "LaurentTreguier",
    "license": "MIT",
    "homepage": "https://github.com/LaurentTreguier/vscode-uncrustify",
    "icon": "images/uncrustify.png",
    "galleryBanner": {
        "color": "#1F1F1F",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/LaurentTreguier/vscode-uncrustify.git"
    },
    "bugs": {
        "url": "https://github.com/LaurentTreguier/vscode-uncrustify/issues"
    },
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Formatters"
    ],
    "keywords": [
        "uncrustify",
        "format",
        "formatting",
        "formatter",
        "multi-root ready"
    ],
    "activationEvents": [
        "onLanguage:apex",
        "onLanguage:apex-anon",
        "onLanguage:c",
        "onLanguage:cpp",
        "onLanguage:csharp",
        "onLanguage:d",
        "onLanguage:java",
        "onLanguage:objective-c",
        "onLanguage:pawn",
        "onLanguage:pde",
        "onLanguage:vala",
        "workspaceContains:uncrustify.cfg",
        "onCommand:uncrustify.create",
        "onCommand:uncrustify.open",
        "onCommand:uncrustify.save",
        "onCommand:uncrustify.savePreset",
        "onCommand:uncrustify.loadPreset",
        "onCommand:uncrustify.deletePreset",
        "onCommand:uncrustify.upgrade"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "Uncrustify configuration",
            "properties": {
                "uncrustify.executablePath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the uncrustify executable",
                    "scope": "window"
                },
                "uncrustify.executablePath.linux": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the uncrustify executable (Linux)",
                    "scope": "window"
                },
                "uncrustify.executablePath.osx": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the uncrustify executable (macOS)",
                    "scope": "window"
                },
                "uncrustify.executablePath.windows": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the uncrustify executable (Windows)",
                    "scope": "window"
                },
                "uncrustify.configPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the uncrustify configuration file",
                    "scope": "resource"
                },
                "uncrustify.graphicalConfig": {
                    "type": "boolean",
                    "default": true,
                    "description": "Toggles the graphical config editor",
                    "scope": "window"
                },
                "uncrustify.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Activates logs for debugging the extension",
                    "scope": "window"
                },
                "uncrustify.langOverrides": {
                    "type": "object",
                    "default": {
                        "apex": "JAVA",
                        "apex-anon": "JAVA"
                    },
                    "description": "Overrides default language settings for uncrustify. Can be used to support languages not officially supported",
                    "scope": "window"
                },
                "uncrustify.useReplaceOption": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use the --replace option from uncrustify to bypass VSCode's document handling",
                    "scope": "resource"
                }
            }
        },
        "commands": [
            {
                "title": "Create default config file",
                "category": "Uncrustify",
                "command": "uncrustify.create"
            },
            {
                "title": "Open config file",
                "category": "Uncrustify",
                "command": "uncrustify.open"
            },
            {
                "title": "Save config file",
                "category": "Uncrustify",
                "command": "uncrustify.save"
            },
            {
                "title": "Save config file as preset",
                "category": "Uncrustify",
                "command": "uncrustify.savePreset"
            },
            {
                "title": "Load preset config file",
                "category": "Uncrustify",
                "command": "uncrustify.loadPreset"
            },
            {
                "title": "Delete preset config file",
                "category": "Uncrustify",
                "command": "uncrustify.deletePreset"
            },
            {
                "title": "Upgrade config file",
                "category": "Uncrustify",
                "command": "uncrustify.upgrade"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "fs-extra": "^7.0.1",
        "meta-pkg": "^0.7.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.5",
        "@types/node": "10.x.x",
        "@types/webpack": "^4.4.26",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.0.3",
        "typescript": "^3.4.1",
        "vsce": "^1.59.0",
        "vscode": "^1.1.33",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    }
}
